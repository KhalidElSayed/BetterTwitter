<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TwitterLikeTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/TwitterLikeActionBar</item>
    </style>

    <style name="TwitterLikeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#55aeed</item>
        <item name="android:titleTextStyle">@style/TwitterLikeActionBarTitleText</item>
    </style>

    <style name="TwitterLikeActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
	</style>
    
    <style name="ComposeTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ComposeActionBar</item>
    	<item name="android:textAllCaps">false</item>	
   </style>

    <style name="ComposeActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:icon">@android:color/transparent</item>
	</style>

</resources>
